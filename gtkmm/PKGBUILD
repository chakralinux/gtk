pkgbase=gtkmm
pkgname=('gtkmm')
pkgver=2.24.2
pkgrel=5
pkgdesc="C++ bindings for gtk2"
arch=('x86_64')
depends=('gtk2' 'pangomm' 'atkmm' 'filesystem-extra')
license=('LGPL')
options=('!libtool' '!emptydirs')
url="http://gtkmm.sourceforge.net/"
install=install
source=("http://ftp.gnome.org/pub/GNOME/sources/${pkgbase}/2.24/${pkgbase}-${pkgver}.tar.xz")
md5sums=('388a63ffc40cc8e208df9a1732a67d2d')

build() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  ./configure --prefix=/extra/usr --disable-documentation
  make
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}"

  sed -i -e 's/^doc_subdirs/#doc_subdirs/' Makefile

  make DESTDIR="${pkgdir}" install
}
