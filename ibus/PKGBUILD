
pkgname=ibus
pkgver=1.5.10
pkgrel=1
pkgdesc="Next Generation Input Bus for Linux, IBus qt library and IBus qt input method plugin included"
arch=('x86_64')
url="http://ibus.googlecode.com"
license=('LGPL')
depends=('hicolor-icon-theme' 'libnotify' 'gtk2' 'gtk3' 'pyxdg' 'python2-gobject')
makedepends=('gobject-introspection' 'vala' 'iso-codes' 'intltool')
install=ibus.install
source=(https://github.com/${pkgname}/${pkgname}/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.gz)
sha1sums=('26a67c3e0ab5efbf14b1872baca4cd972cb08ae2')

build() {
  cd ${pkgname}-${pkgver}
  export PYTHON=python2
  ./configure \
    --prefix=/usr \
    --libexecdir=/usr/lib/ibus \
    --sysconfdir=/etc \
    --disable-gconf \
    --disable-dconf \
    --disable-memconf \
    --enable-ui \
    --enable-python-library
  make
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}" install
}
