# Contributions from Arch: https://projects.archlinux.org/svntogit/packages.git/tree/trunk?h=packages/babl

pkgname=babl
pkgver=0.1.24
pkgrel=1
pkgdesc="Dynamic, any to any, pixel format conversion library"
arch=('x86_64')
url="http://gegl.org/babl/"
license=('LGPL3')
depends=('glibc')
options=('!makeflags')
source=("http://ftp.gimp.org/pub/babl/${pkgver%.*}/${pkgname}-${pkgver}.tar.bz2")
sha1sums=('87d4eb409cfa50bd622f85c2858ddaa8167b4f5e')
 
build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr
  make
}
 
check() {
  cd $pkgname-$pkgver
  make check
}
 
package() {
  cd $pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
