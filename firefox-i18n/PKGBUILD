source=()
_url=http://download.cdn.mozilla.net/pub/mozilla.org/firefox/releases/$pkgver/linux-i686/xpi

for _lang in "${_languages[@]}"; do
  _locale=${_lang%% *}

  source+=("firefox-i18n-$pkgver-$_locale.xpi::$_url/$_locale.xpi")
done

# Don't extract anything
noextract=(${source[@]%%::*})

package() {
  for _lang in "${_languages[@]}"; do
    _locale=${_lang%% *}
    install -Dm644 firefox-i18n-$pkgver-${_locale}.xpi \
      "$pkgdir/extra/usr/lib/firefox/extensions/langpack-${_locale}@firefox.mozilla.org.xpi"
  done
}

